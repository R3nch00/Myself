#include<iostream>
using namespace std;
int main(){
int age;int TotalAge=0; int NumberOfPeople=0;
cout<<"Enter the 1st persons age or -1 to quit:"<<endl;
cin>>age;
while(age!=-1){
TotalAge=TotalAge+age;
NumberOfPeople++;
cout<<"Enter the next persons age or -1 to quit:"<<endl;
cin>>age;
}
cout<<"Addition Of Age:"<<TotalAge<<endl;
cout<<"Total People List:"<<NumberOfPeople<<endl;
cout<<"Average Age:"<<TotalAge/NumberOfPeople<<endl;
return 0;
} 
